<h1>Board#index</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Game</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <% game = Game.find(board.game_id) %>
  <tr>
    <td><%= board.id %></td>
    <td><%= board.game_id %></td>
    <td><%= render 'boards/board', :board => board %></td>
    <td><%= link_to 'Show', game_board_path(game, board) %></td>
    <td><%= link_to 'Edit', edit_game_board_path(game, board) %></td>

  </tr>
<% end %>
</table>

